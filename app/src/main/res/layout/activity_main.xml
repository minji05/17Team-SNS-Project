<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mainPage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/item_toolbar"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/iv_home_logo" />

        <TextView
            android:id="@+id/txt_userName"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
        android:id="@+id/btn_myPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이페이지"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#009688">

    <!--프로필이름-->
    <ImageView
        android:id="@+id/name_dh"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/dh" />

    <ImageView
        android:id="@+id/name_hh"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/hh" />

        <ImageView
        android:id="@+id/name_sj"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/sj" />

        <ImageView
            android:id="@+id/name_mj"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/mj" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/make_tv_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <LinearLayout
            android:id="@+id/et_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--mj-->
            <ImageView
                android:id="@+id/name_mj_s"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mj" />

            <ImageView
                android:layout_width="272dp"
                android:layout_height="132dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/desk" />



        </LinearLayout>

            <TextView
                android:id="@+id/tv_mj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_mj"
                android:textSize="8pt"
                android:layout_marginBottom="45dp"/>

            <!--dh-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/darker_gray" />

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->
<!--            -->
<!--            </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--mj-->
            <ImageView
                android:id="@+id/name_hh_s"
                android:layout_width="39dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/hh" />
            <!--hh-->
            <ImageView
                android:layout_width="287dp"
                android:layout_height="187dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bike" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_hh"
                android:textSize="8pt"
                android:layout_marginBottom="45dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--mj-->
            <ImageView
                android:id="@+id/name_sj_s"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sj" />
            <!--sj-->
            <ImageView
                android:layout_width="307dp"
                android:layout_height="187dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/walking" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:text="@string/tv_sj"
                android:textSize="7.8pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/darker_gray" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/make_tv_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:background="@color/black"
        android:text="ADD"
        android:textColor="#3FB5A3"
        android:textSize="8pt" />




</LinearLayout>