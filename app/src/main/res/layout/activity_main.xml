<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mainPage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/item_toolbar"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/iv_home_logo"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/btn_color"
        android:orientation="horizontal">

        <!--프로필이름-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_myPagedh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/pic_dh"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_myPagehh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/pic_hh"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_myPagesj"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/pic_suj"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_myPagemj"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/pic_mj"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearanceOverlay"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_post"
                android:layout_width="match_parent"
                android:layout_height="590dp"
                android:layout_margin="5dp"
                android:scrollbars="vertical"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/flo_postCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/icon_add"
            android:backgroundTint="@color/btn_color"/>
    </FrameLayout>
